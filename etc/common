KOCHANSKI_DEPENDS="		\
	python			\
"

# kochanski

KOCHANSKI_HOME=${TOPLEVEL:=${KOCHANSKI_HOME}}

KOCHANSKI_HOME=$(cd ${KOCHANSKI_HOME}; pwd)
export KOCHANSKI_HOME

KOCHANSKI_BIN=${KOCHANSKI_HOME}/bin
export KOCHANSKI_BIN

KOCHANSKI_ETC=${KOCHANSKI_HOME}/etc
export KOCHANSKI_ETC

KOCHANSKI_LIB=${KOCHANSKI_HOME}/lib
export KOCHANSKI_LIB

KOCHANSKI_SRC=${KOCHANSKI_HOME}/src
export KOCHANSKI_SRC

KOCHANSKI_VAR=${KOCHANSKI_HOME}/var
export KOCHANSKI_VAR

KOCHANSKI_DB=${KOCHANSKI_VAR}/db
export KOCHANSKI_DB

KOCHANSKI_LOG=${KOCHANSKI_VAR}/log
export KOCHANSKI_LOG

KOCHANSKI_CONFIGUREFLAGS="--prefix=${KOCHANSKI_HOME}" 
export KOCHANSKI_CONFIGUREFLAGS

# system

PATH=${KOCHANSKI_BIN}:${PATH}
export PATH

LD_LIBRARY_PATH=${KOCHANSKI_LIB}:${LD_LIBRARY_PATH}
export LD_LIBRARY_PATH

for x in ${KOCHANSKI_DEPENDS}; do
	[ ! -d /opt/${x} ] && continue

	PATH="/opt/${x}/bin:/opt/${x}/sbin:${PATH}"
	export PATH

	LD_LIBRARY_PATH="/opt/${x}/lib:${LD_LIBRARY_PATH}"
	export LD_LIBRARY_PATH
done

# python

PYTHON_HOME=/opt/python
export PYTHON_HOME

PATH=${PYTHON_HOME}/bin:${PATH}
export PATH

PYTHON="$(which python)"
export PYTHON

PYTHONFLAGS=
export PYTHONFLAGS

PYTHONPATH=${LD_LIBRARY_PATH}:${PYTHONPATH}
PYTHONPATH=${KOCHANSKI_LIB}:${KOCHANSKI_LIB}/python:${PYTHONPATH}
export PYTHONPATH

for x in ${KOCHANSKI_DEPENDS}; do
	[ ! -d /opt/${x} ] && continue

	PYTHONPATH=/opt/${x}/lib:/opt/${x}/lib/python:${PYTHONPATH}
	export PYTHONPATH
done

# extras

KOCHANSKI_EXTRAS="		\
"
for x in ${KOCHANSKI_EXTRAS}; do
	TOPLEVEL=${KOCHANSKI_HOME}/extras/${x}
	. ${TOPLEVEL}/etc/common
done
